{
    "repositories": [
        { "type": "path", "url": "packages/*" },
        { "type": "composer", "url": "https://composer.typo3.org/" }
    ],
    "name": "farconada/typo3-9-distribution",
    "description" : "TYPO3 CMS Distribution with console and .env support",
    "license": "GPL-2.0-or-later",
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "require": {
	    "i-have-no-company/f2a-sitepackage": "@dev",
        "helhum/typo3-console": "^5.4",
        "helhum/typo3-secure-web": "^0.2.7",
        "roave/security-advisories": "dev-master",
        "typo3-console/composer-auto-commands": "^0.2",
        "typo3/cms-belog": "^9.4",
        "typo3/cms-beuser": "^9.4",
        "typo3/cms-context-help": "^9.4",
        "typo3/cms-fluid-styled-content": "^9.4",
        "typo3/cms-impexp": "^9.4",
        "typo3/cms-info": "^9.4",
        "typo3/cms-info-pagetsconfig": "^9.4",
        "typo3/cms-lowlevel": "^9.4",
        "typo3/cms-reports": "^9.4",
        "typo3/cms-rte-ckeditor": "^9.4",
        "typo3/cms-setup": "^9.4",
        "typo3/cms-tstemplate": "^9.4",
        "typo3/cms-viewpage": "^9.4",
	    "bk2k/bootstrap-package": "^10"
    },
    "require-dev": {
        "helhum/dotenv-connector": "^2.0",
        "typo3-console/composer-typo3-auto-install": "^0.2",
        "typo3-console/php-server-command": "^0.2",
        "typo3/testing-framework": "^1.2.2 || ^2.0.1"
    },
    "extra": {
        "typo3/cms": {
            "root-dir": "private",
            "web-dir": "public"
        }
    }
}
